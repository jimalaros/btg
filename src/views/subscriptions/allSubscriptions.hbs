<div class="row">
  {{#each subscriptions}}
  <div class="col-sm-6">
    <div class="card my-3" style="width: 25rem;">
      <div class="card-body text-light bg-dark">
        <h4 class="card-title d-flex justify-content-between align-items-center">{{ title }}</h4>
        <p>Money: {{ total }} </p>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <p class="lead">There are not subscriptions done yet.</p>
      <a href="/subscriptions/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>