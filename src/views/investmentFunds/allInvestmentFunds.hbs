<div class="row">
  {{#each investmentFunds}}
  <div class="col-sm-6">
    <div class="card my-3" style="width: 25rem;">
      <div class="card-body text-light bg-dark">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ nameInvestmentFund }}
        </h4>
        <p>{{ investment }} </p>
        <p>{{ category }} </p>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p class="lead">There are not investment funds yet.</p>
      <a href="/investmentFunds/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>