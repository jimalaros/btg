<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Investment Fund</h3>
    </div>
    <div class="card-body">
      <form action="/investmentFunds/newInvestmentFund" method="POST">
        <div class="form-group">
          <input type="text" name="nameInvestmentFund" class="form-control" placeholder="name of the investment fund" autofocus/>
        </div>
        <div class="form-group">
          <input type="number" name="investment" class="form-control" placeholder="Investment" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="category" class="form-control" placeholder="Category" autofocus/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Create
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

