{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edit Investment Fund</h3>
    </div>
    <div class="card-body">
      <form action="/investmentFunds/edit-investmentFund/{{investmentFund._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="nameInvestmentFund" class="form-control" value="{{investmentFund.nameInvestmentFund}}"/>
        </div>
        <div class="form-group">
          <input type="number" name="money" class="form-control" value="{{investmentFund.money}}"/>
        </div>
        <div class="form-group">
          <div name="category" class="form-control">{{investmentFund.category}}/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Edit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
